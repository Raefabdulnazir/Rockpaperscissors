<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="text"
        android:text="ROCK PAPER SCISSORS"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/playerChoseHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAYER chose"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/playerChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_______"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/cpuChoseHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CPU chose"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/cpuChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_______"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/scoreHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/playerScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Score: 0"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/cpuScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CPU Score: 0"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/rockBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROCK" />

        <Button
            android:id="@+id/paperBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="PAPER" />

        <Button
            android:id="@+id/scissorsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="SCISSORS" />
    </LinearLayout>
</LinearLayout>
